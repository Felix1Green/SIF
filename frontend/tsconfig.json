{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/",
    "paths": {
      "@components/*": ["components/*"],
      "@features/*": ["features/*"],
      "@models/*": ["models/*"],
      "@helpers/*": ["helpers/*"],
      "@consts/*": ["consts/*"],
      "@views/*": ["views/*"],
      "@theme/*": ["theme/*"],
    }
  }
}
